public int[] sortArrayByParityII(int[] A) {
        int[] arr=new int[A.length];
        for(int index=0,even=0,odd=1;index<A.length;index++){
            if(A[index]%2==0){
                arr[even]=A[index];
                even=even+2;
            }else{
                arr[odd]=A[index];
                odd=odd+2;
            }
        }
        return arr;
    }
