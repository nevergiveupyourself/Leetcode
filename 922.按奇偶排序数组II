public int[] sortArrayByParityII(int[] A) {

        List<Integer> list1=new ArrayList<>();
        List<Integer> list2=new ArrayList<>();
        for(int num:A){
            if( num%2==0 ){
                list1.add(num);
            }
            else list2.add(num);
        }
        int[] arr=new int[2*list1.size()];
        int index=0;
        for(int i=0;i<list1.size();i++){
            arr[index]=list1.get(i);
            index++;
            arr[index]=list2.get(i);
            index++;
        }
       /* for(int num:list1){
            arr[index]=num;
            index=index+2;
        }
        index=1;
        for(int num:list2){
            arr[index]=num;
            index=index+2;
        }*/
        return arr;
    }
