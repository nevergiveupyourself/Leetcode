class Solution {
    public String reverseWords(String s) {
        String result="";
        String[] str=s.split(" ");
        for(int i=0;i<str.length;i++){
            String tmp="";
            for(int j=str[i].length()-1;j>=0;j--){
                tmp=tmp+""+str[i].charAt(j);
            }
            System.out.println("tmp:"+tmp);
            if(i!=str.length-1){
                result=result+tmp+" ";
            }else{
                result=result+tmp;
            }
        }
        System.out.println("result:"+result);
        return result;
    }
}
